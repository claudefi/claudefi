# Claudefi Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# Anthropic API Key (for Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Supabase (for database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# =============================================================================
# TRADING MODE
# =============================================================================

# Paper trading (default: true)
# Set to 'false' for real trading (CAUTION!)
PAPER_TRADING=true

# Active domains (comma-separated)
ACTIVE_DOMAINS=dlmm,perps,polymarket,spot

# Cycle interval in milliseconds (default: 30 minutes)
CYCLE_INTERVAL_MS=1800000

# =============================================================================
# OPTIONAL: Real Trading Credentials
# Only needed if PAPER_TRADING=false
# =============================================================================

# Solana wallet for Jupiter swaps and Meteora LP
# Base58 encoded private key
SOLANA_PRIVATE_KEY=

# Solana RPC endpoint (default: public endpoint)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Hyperliquid API (for perps trading)
HYPERLIQUID_API_KEY=
HYPERLIQUID_API_SECRET=

# Polymarket CLOB API (for prediction markets)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=

# =============================================================================
# OPTIONAL: API Keys for Enhanced Data
# =============================================================================

# Jupiter API key for token prices (get from https://portal.jup.ag)
# Without this, falls back to DexScreener (free but slower)
JUPITER_API_KEY=

# Firecrawl for Polymarket research
FIRECRAWL_API_KEY=

# Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# OPTIONAL: Advanced Settings
# =============================================================================

# Maximum position size as percentage of domain balance (default: 0.20 = 20%)
MAX_POSITION_PCT=0.20

# Maximum positions per domain (default: 3)
MAX_POSITIONS_PER_DOMAIN=3

# Minimum confidence to execute a trade (default: 0.60 = 60%)
CONFIDENCE_THRESHOLD=0.60

# Max consecutive hold decisions before forcing action (default: 5)
MAX_CONSECUTIVE_HOLDS=5
